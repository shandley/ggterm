{
  "name": "@ggterm/core",
  "version": "0.0.1",
  "description": "Grammar of Graphics engine for terminals",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ggterm": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts ./src/cli.ts --outdir ./dist --target node && tsc --emitDeclarationOnly",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "grammar-of-graphics",
    "visualization",
    "terminal",
    "charts"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {},
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/bun": "^1.1.0"
  }
}
